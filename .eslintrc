{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "vue", "html"
    ],
    "rules": {
        "no-restricted-globals": ["error", "event", "fdescribe"],
        "no-console": ["error"],
        "indent": ["error", 2],
        "quotes": ["error", "single"]
    }
}
